{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue", "stores/**/*"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@*": ["./src/*"],
      "@stores/*": ["./stores/*"]
    },
    "types": ["node"],
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "strict": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "jsx": "preserve",
    "skipLibCheck": true
  }
}
